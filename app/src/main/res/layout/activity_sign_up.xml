<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bgColorMain"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context=".activities.AuthenticationActivity">

    <ImageView
        android:id="@+id/image_view_logo"
        android:layout_width="200sp"
        android:layout_height="100sp"
        android:layout_margin="20dp"
        android:outlineAmbientShadowColor="@color/colorPrimary"
        android:padding="20dp"
        app:srcCompat="@drawable/fingerprint" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/indieflower"
        android:text="Gringotts"
        android:textColor="#faf9f9"
        android:textSize="40sp" />
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#faf9f9"
        android:textColorHint="#929aab">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/fullname_edittext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20sp"
            android:ems="10"
            android:freezesText="true"
            android:textColor="#faf9f9"
            android:hint="Enter Full Name"
            android:inputType="text"
            android:paddingVertical="20dp" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#faf9f9"
        android:textColorHint="#929aab">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/email_edittext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20sp"
            android:ems="10"
            android:freezesText="true"
            android:textColor="#faf9f9"
            android:hint="Enter Email"
            android:inputType="textEmailAddress"
            android:paddingVertical="20dp" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#faf9f9"
        android:textColorHint="#929aab">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/phoneedittext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20sp"
            android:ems="10"
            android:freezesText="true"
            android:hint="Enter Phone Number"
            android:textColor="#faf9f9"
            android:inputType="phone"
            android:paddingVertical="20dp" />
    </com.google.android.material.textfield.TextInputLayout>


    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#faf9f9"
        android:textColorHint="#929aab">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/password_edittext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20sp"
            android:ems="10"
            android:freezesText="true"
            android:hint="Enter Password"
            android:textColor="#faf9f9"
            android:inputType="textPassword"
            android:paddingVertical="20dp" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColorHint="#929aab">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/password_confirm_edittext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20sp"
            android:ems="10"
            android:freezesText="true"
            android:textColor="#faf9f9"
            android:hint="Confirm Password"
            android:inputType="textPassword"
            android:paddingVertical="20dp" />
    </com.google.android.material.textfield.TextInputLayout>
    <Button
        android:id="@+id/signup_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="30sp"
        android:background="@drawable/button_shape"
        android:fontFamily="@font/indieflower"
        android:paddingHorizontal="40sp"
        android:text="SIGN UP"
        android:textSize="30sp" />



    <TextView
        android:id="@+id/login_redirect"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.5"
        android:gravity="center_horizontal"
        android:paddingHorizontal="0dp"
        android:text="Already a user? Please Login Here"
        android:textAlignment="gravity"
        android:textColor="#faf9f9" />



</LinearLayout>
